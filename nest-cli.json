{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "plugins": [
    {
      "name": "@nestjs/swagger",
      "options": {
        "classValidatorShim": true,
        "introspectComments": true
      }
    }
  ],
  "compilerOptions": {
    "assets": [
      {
        "include": "i18n-languages/**/*",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}
